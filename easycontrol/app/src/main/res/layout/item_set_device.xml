<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/background_cron"
  android:orientation="vertical"
  android:padding="10dp">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/set_device_title"
    android:textColor="@color/onCardBackground"
    android:textSize="@dimen/middleFont" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/button_start_wireless"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:background="@drawable/background_cron"
      android:backgroundTint="@color/button"
      android:gravity="center"
      android:paddingTop="10dp"
      android:paddingBottom="10dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_device_button_start_wireless"
        android:textColor="@color/onButton"
        android:textSize="@dimen/smallFont" />

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:src="@drawable/rss"
        android:tint="@color/onButton" />
    </LinearLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/button_push_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/background_cron"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/set_device_buttons_send"
          android:textColor="@color/onButton"
          android:textSize="@dimen/smallFont" />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:layout_marginStart="4dp"
          android:src="@drawable/dir_floder"
          android:tint="@color/onButton" />
      </LinearLayout>

      <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

      <LinearLayout
        android:id="@+id/button_recover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/background_cron"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/set_device_button_recover"
          android:textColor="@color/onButton"
          android:textSize="@dimen/smallFont" />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:layout_marginStart="4dp"
          android:src="@drawable/refresh"
          android:tint="@color/onButton" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/button_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/background_cron"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/set_device_button_change"
          android:textColor="@color/onButton"
          android:textSize="@dimen/smallFont" />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:layout_marginStart="4dp"
          android:src="@drawable/editor"
          android:tint="@color/onButton" />
      </LinearLayout>

      <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

      <LinearLayout
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/background_cron"
        android:backgroundTint="@color/alert"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/set_device_button_delete"
          android:textColor="@color/onAlert"
          android:textSize="@dimen/smallFont" />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:layout_marginStart="4dp"
          android:src="@drawable/ashbin"
          android:tint="@color/onAlert" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>